<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer white ring -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="9dp"
                android:left="9dp"
                android:right="9dp"
                android:top="9dp" />
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="4dp"
                android:color="#FFF" />
        </shape>
    </item>
    <!-- Inner white circle -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="#FFF" />
        </shape>
    </item>
</layer-list>